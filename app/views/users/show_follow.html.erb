<% provide(:title, @title)%>

<div class="container my-page">
  <div class="container signup-page">
    <div class="row">
      <div class="col-md-2 col-6 ms-3">
        <% if @user.image.attached? %>
          <%= image_tag @user.image.variant(:display), class: "user-image", width: "100%" %>
        <% else %>
          <%= image_tag("default_user.png", width: "100%" ) %> <%# 登録画像がない場合はデフォルトを表示 %>
        <% end %>
      </div>
      <div class="col-md-9 col-12 ms-4">
        <h1>
          <%= @user.nickname %>
        </h1>
        <div>
          <%= render "shared/stats" %>
        </div>
        <div>
          <%= render 'follow_form' if logged_in? %>
        </div>
      </div>
    </div>
  </div>

  <div class="container signup-page center">
    <h3 class="center"><%= @title %></h3>
    <hr>
    <div class="row users follow">
      <% if @users.any? %>
        <%= render @users %>
      <%= paginate @users %>
    </div>
    <% end %>
  </div>
</div>