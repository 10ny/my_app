<% provide(:title, "Sign up") %>
<h1 class="center">Sign up</h1>

<div class="container signup-form">
  <div class="form-floating mb-3">
    <input type="name" class="form-control" id="floatingInput" placeholder="山田 太郎">
    <label for="floatingInput">名前</label>
  </div>
  <div class="form-floating mb-3">
    <input type="name" class="form-control" id="floatingInputValue" placeholder="@Tarochan">
    <label for="floatingInput">ニックネーム</label>
  </div>
  <div class="form-floating mb-3">
    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
    <label for="floatingInput">メールアドレス</label>
  </div>
  <div class="form-floating mb-3">
    <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
    <label for="floatingPassword">パスワード</label>
  </div>
  <div class="form-floating mb-3">
    <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
    <label for="floatingPassword">パスワード(再入力)</label>
  </div>
</div>