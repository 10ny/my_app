<li id="beanspost-<%= beanspost.id %>">
  <span class="user"><%= link_to beanspost.user.nickname, beanspost.user %></span>
  <span class="content">
    <% if beanspost.image.attached? %>
      <%= image_tag beanspost.image.variant(:display)  %>
    <% end %>
    <%= beanspost.content %></span>
  <span class="timestamp">
    <%= l beanspost.created_at, format: :short %>
    <%= time_ago_in_words(beanspost.created_at) %>前 <%# 記述なしでも可 %>
  </span>
  <% if current_user?(beanspost.user) %>
    <%= link_to "削除", beanspost, data: { "turbo-method": :delete, turbo_confirm: "削除しますか?" } %>
  <% end %>
</li>

<%# カード形式に改良 %>
<li>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
          <div class="card shadow-sm">
            <% if beanspost.image.attached? %>
              <%= image_tag beanspost.image.variant(:display), class: "bd-placeholder-img card-img-top" %>
            <% end %>
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

            <div class="card-body">
              <h4 class="card-title">豆の名前</h4>
              <h6 class="card-subtitle mb-2 text-muted">煎り度</h6>
              <h6 class="card-subtitle mb-2 text-muted">産地</h6>
              <p class="card-text"><%= beanspost.content %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">詳細</button>
                  <% if current_user?(beanspost.user) %>
                    <button type="button" class="btn btn-sm btn-outline-secondary">編集</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">
                      <%= link_to "削除", beanspost, data: { "turbo-method": :delete, turbo_confirm: "削除しますか?" } %>
                    </button>
                  <% end %>
                </div>
                <small class="text-muted user"><%= link_to beanspost.user.nickname, beanspost.user %></small>
                <small class="text-muted"><%= time_ago_in_words(beanspost.created_at) %>前</small>
                <small class="text-muted">保存</small> <%# 保存のアイコン表示とリンク %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>